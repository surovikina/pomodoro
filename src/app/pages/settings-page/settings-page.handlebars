<section class="main__container container">
  <div class="main__header-top">
    <h1 class="main__header">Settings</h1>
  </div>
  <div class="main__header-bottom">
    <h2 class="main__sub-header">
      {{#if pomodoros}} Pomodoros settings {{/if }}
      {{#if categories}} Ð¡ategories list overview {{/if }}
    </h2>
    <nav class="tabs tabs--absolute">
      <ul class="tabs__nav">
        <li class="tabs__item"><a href="#" class="tabs__link  {{#if pomodoros}}is-active{{/if}}" data-id="pomodoros">Pomodoros</a></li>
        <li class="tabs__item"><a href="#" class="tabs__link {{#if categories}}is-active{{/if}}" data-id="categories">Categories</a></li>
      </ul>
    </nav>
  </div>
  {{#if pomodoros}}
  <h3 class="header-cycle">Your cycle</h3>
  <div class="box-cycle">
  </div>
  {{/if}}
  {{#if categories}}
    <div class="box box--column">
      <div class="box__item box__item--yellow">
        <div class="box__heading">Work</div>
      </div>
      <div class="box__item box__item--dark-blue">
        <div class="box__heading">Education</div>
      </div>
      <div class="box__item box__item--orchid">
        <div class="box__heading">Hobby</div>
      </div>
      <div class="box__item box__item--dark-peach">
        <div class="box__heading">Sport</div>
      </div>
      <div class="box__item box__item--aqua-blue">
        <div class="box__heading">Other</div>
      </div>
    </div>
  {{/if }}
  <div class="main__nav-holder">
    <a href="#" class="btn btn--blue" id="tasksNavigate" data-link="task-list">Go to Tasks</a>
    {{#if pomodoros}}
      <button class="btn btn--green" id="buttonSubmitData">Save</button>
    {{/if}}
  </div>
</section>