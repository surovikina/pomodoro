<div class="box__item box__item--yellow">
  <div class="box__heading">Work Time</div>
  <div class="input-group input-group--work-time">
    <button class="input-group__control input-group__control--minus">
      <span class="icon icon-minus"></span>
    </button>
    <input class="input-group__digit" step="5" min="15" max="25" type="number">
    <button class="input-group__control  input-group__control--plus">
      <span class="icon icon-add"></span>
    </button>
  </div>
  <div class="box__desk">Please select a value between 15 and 25 <span
    class="white-color">minutes</span></div>
</div>
<div class="box__item box__item--aqua-blue">
  <div class="box__heading">Work Iteration</div>
  <div class="input-group input-group--iteration-time">
    <button class="input-group__control input-group__control--minus"><span class="icon icon-minus"></span></button>
    <input class="input-group__digit" step="1" min="2" max="5" type="number">
    <button class="input-group__control  input-group__control--plus"><span class="icon icon-add"></span>
    </button>
  </div>
  <div class="box__desk">Please select a value between 2 and 5 <span
    class="white-color">iterations</span></div>
</div>
<div class="box__item box__item--dark-blue">
  <div class="box__heading">Short Break</div>
  <div class="input-group input-group--short-break">
    <button class="input-group__control input-group__control--minus">
      <span class="icon icon-minus"></span>
    </button>
    <input class="input-group__digit" step="1" min="3" max="5" type="number">
    <button class="input-group__control  input-group__control--plus">
      <span class="icon icon-add"></span>
    </button>
  </div>
  <div class="box__desk">Please select a value between 3 and 5 <span
    class="white-color">minutes</span></div>
</div>
<div class="box__item box__item--orchid">
  <div class="box__heading">Long Break</div>
  <div class="input-group input-group--long-break">
    <button class="input-group__control input-group__control--minus"><span class="icon icon-minus"></span></button>
    <input class="input-group__digit" step="5" min="15" max="30" type="number">
    <button class="input-group__control  input-group__control--plus">
      <span class="icon icon-add"></span>
    </button>
  </div>
  <div class="box__desk">Please select a value between 15 and 30 <span
    class="white-color">minutes</span></div>
</div>
